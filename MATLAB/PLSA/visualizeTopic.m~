function visualizeWords(pw_z, frequencies, videoStack, boxSize)
    % wordFrequencies - a mxn matrix, 
    %       m = number of documents
    %       n = 5 * number of pixel boxes in (r u l d s) order
    
    wBoxes = floor(size(videoStack,2) / boxSize);
    hBoxes = floor(size(videoStack,1) / boxSize);
    
    wordProbs = pw_z(:,topic);
    
    docProbs = repmat(wordProbs,size(frequencies,1),1);
    
    for i = 1:size(frequencies,1)
        wordProbs = sum(reshape(docProbs(i,:),hBoxes*wBoxes,5),2);
        imgProbs = resize(reshape(wordProbs,hBoxes,wBoxes),boxSize);
        
        clear,
        imshow(videoStack(:,:,i));
        
        greenImg = ones(size(videoStack(:,:,1)));
        h = imshow([0 * greenImg 255 * greenImg 0 * greenImg]);
        set(h,'AlphaData',imgProbs);
        
        
    
    hdl = figure;
    subplot(2,3,2),
    imshow(rFrame);
    subplot(2,3,3),
    imshow(uFrame);
    subplot(2,3,4),
    imshow(lFrame);
    subplot(2,3,5),
    imshow(dFrame);
    subplot(2,3,6),
    imshow(sFrame);
    
    for i = frameRange
        subplot(2,3,1),
        imshow(videoStack(:,:,i));
        drawnow;
    end
end

